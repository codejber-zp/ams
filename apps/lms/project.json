{
  "name": "lms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/lms",
  "projectType": "application",
  "tags": [],
  "targets": {
    "container-dev": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "file": "apps/lms/Dockerfile",
        "metadata": {
          "images": ["lms"],
          "load": true,
          "tags": ["latest"]
        },
        "target": "development"
      }
    },
    "container-prod": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "options": {
        "engine": "docker",
        "file": "apps/lms/Dockerfile",
        "context": "apps/lms",
        "metadata": {
          "images": ["lms"],
          "load": true,
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=sha,prefix=sha-"
          ]
        },
        "target": "production"
      }
    }
  }
}
